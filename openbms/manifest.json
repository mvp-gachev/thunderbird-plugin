{
  "manifest_version": 2,
  "name": "Send to OpenBMS",
  "description": "Send open email data to OpenBMS",
  "version": "1.0",
  "author": "Andrey Gachev",
  "applications": {
    "gecko": {
      "id": "thinderbirdaddon@openbms.com",     "strict_min_version": "78.0"
    }
  },

  "message_display_action": {
    "default_popup": "messagePopup/popup.html",
    "default_title": "Send open email data to OpenBMS",
    "default_icon": "images/internet-32px.png"
  },
  "permissions": [
    "messagesRead",
    "http://openbms.localtest"
  ],
  "icons": {
    "64": "images/internet.png",
    "32": "images/internet-32px.png",
    "16": "images/internet-16px.png"
  }
}